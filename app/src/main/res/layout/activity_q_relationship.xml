<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/navcolor"
    tools:context=".q_relationship">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your relationship status?"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.207"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_relationship_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="@drawable/buttoncolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.874" />

    <RadioGroup
        android:id="@+id/rdgRelationship"
        android:layout_width="246dp"
        android:layout_height="238dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/rbn_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single" />

        <RadioButton
            android:id="@+id/rbn_relationship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In a realtionship" />

        <RadioButton
            android:id="@+id/rbn_Married"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Married" />

        <RadioButton
            android:id="@+id/rbn_separated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Separated" />

        <RadioButton
            android:id="@+id/rbn_divorce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Divorced" />

        <RadioButton
            android:id="@+id/rbn_Widowed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Widowed" />

        <RadioButton
            android:id="@+id/rbn_Other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>